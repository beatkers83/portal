root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.less]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4

[*.html]
indent_style = tab
indent_size = 2

[*.twig]
indent_style = tab
indent_size = 2
